<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dsinghvimegha.schemesforme.Mig2Activity">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="92dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Income of the household per year	" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="12 Lakhs" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Maximum tenure of the loan	" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="20 years" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Interest subsidy per year	" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="4%" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Maximum interest subsidy	" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="2,35 Lakh" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Dwelling unit max carpet area	" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="90 sqrt mtr" />
        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="338dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="39dp"
        android:text="PMAY Home Loan Scheme for MIG1"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
