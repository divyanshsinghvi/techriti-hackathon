<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dsinghvimegha.schemesforme.English2Activity"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_english2">

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="3dp"
        android:drawableBottom="@android:drawable/ic_btn_speak_now"
        android:onClick="TTS"
        android:src="@android:drawable/ic_media_play"
        android:text="speaker"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button3" />


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radioGroup6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:text="3 to 6 Lakh"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="214dp" />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:text="Less than 3Lakh"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="173dp" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:text="6 to 12 Lakh"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="258dp" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="125dp"
            android:layout_height="41dp"
            android:text="12 to 18 Lakh"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="305dp" />
    </RadioGroup>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="8dp"
        android:autoText="true"
        android:autofillHints="@android:drawable/bottom_bar"
        android:background="@android:color/darker_gray"
        android:text="Income"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginStart="16dp"
        android:onClick="previous"
        android:text="Previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="38dp"
        android:onClick="next"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
